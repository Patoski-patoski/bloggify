<!-- views/edit_blog.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit Article - Bloggify</title>

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:300,400,600,700,800&display=swap"
      rel="stylesheet"
    />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />

    <!-- TinyMCE for Rich Text Editing -->
    <script
      src="https://cdn.tiny.cloud/1/qjghi2uugzibwngdvkyt0bx4p2of9fv7lystm3g1osuy1fcy/tinymce/7/tinymce.min.js"
      referrerpolicy="origin"
    ></script>

    <!-- local CSS & JavaScript-->
    <link href="/stylesheets/create_blog.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Navbar (using your existing navbar) -->
    <%- include('partials/navbar') %>

    <!-- Alert Container for Messages -->
    <div id="alert-container"></div>

    <div class="container editor-container">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h1 class="mb-4">Edit Article</h1>

          <form id="blogForm">
            <!-- Hidden field to store the existing slug -->
            <input type="hidden" id="existingSlug" name="existingSlug" value="<%= slug %>">
            
            <div class="mb-4">
              <label for="title" class="form-label required-field">Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
                maxlength="200"
                value="<%= title %>"
              />
              <div class="word-count mt-1" id="titleCount">
                0/200 characters
              </div>
            </div>

            <div class="mb-4">
              <label for="subtitle" class="form-label">Subtitle</label>
              <input
                type="text"
                class="form-control"
                id="subtitle"
                name="subtitle"
                maxlength="500"
                value="<%= subtitle || '' %>"
              />
              <div class="word-count mt-1" id="subtitleCount">
                0/500 characters
              </div>
            </div>
            
            <div class="mb-4">
              <label for="image" class="form-label">Featured Image</label>
              <div class="d-flex gap-3">
                <!-- Button to upload image -->
                <div>
                  <input
                    type="file"
                    class="form-control"
                    id="image"
                    name="file"
                    accept="image/*"
                  />
                </div>
                <!-- Button to select image from Unsplash -->
                <button
                  type="button"
                  class="btn btn-secondary unsplash-btn"
                  data-bs-toggle="modal"
                  data-bs-target="#unsplashModal"
                >
                  Choose from Unsplash
                </button>
              </div>

              <!-- Preview of the selected or uploaded image -->
              <div class="mt-4">
                <h5>Image Preview:</h5>
                <img
                  id="imagePreview"
                  src="<%= image %>"
                  alt="Image Preview"
                  class="img-thumbnail"
                  style="display: block; max-height: 200px"
                />
              </div>
            </div>

            <!-- Modal for Unsplash Image Selection -->
            <div
              class="modal fade"
              id="unsplashModal"
              tabindex="-1"
              aria-labelledby="unsplashModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="unsplashModalLabel">
                      Choose an Image from Unsplash
                    </h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <input
                      type="text"
                      id="unsplashSearch"
                      class="form-control mb-3"
                      placeholder="Search for images (e.g., nature, tech)"
                    />
                    <div id="unsplashGallery" class="d-flex flex-wrap gap-2">
                      <!-- Unsplash images will be dynamically added here -->
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Close
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <div class="mb-4">
              <label for="content" class="form-label required-field">
                Content
              </label>
              <textarea id="content" name="content" required minlength="20"><%- content %></textarea>
            </div>

            <div class="d-flex justify-content-end gap-3">
              <button type="button" class="btn btn-save" id="save-draft-btn">
                <i class="fas fa-save me-2"></i>Save as Draft
              </button>
              <button
                type="button"
                class="btn btn-primary"
                id="publish-blog-btn"
              >
                <i class="fas fa-paper-plane me-2"></i>Publish
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const UNSPLASH_ACCESS_KEY =
        "<%= typeof unsplashAccessKey !== 'undefined' ? unsplashAccessKey : undefined %>";
    </script>

    <script src="/javascript/blog.js"></script>
  </body>
</html>