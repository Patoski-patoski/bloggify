<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bloggify - Share Your Stories</title>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:300,400,600,700,800&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    
    <!-- Bootstrap Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Stylesheet -->
    <link href="stylesheets/index.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar (preserved from original) -->
    <%- include('partials/navbar') %>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-4">Share Your Story with the World</h1>
                    <p class="lead mb-4">Create, share, and discover amazing stories from writers around the globe.</p>
                    <a href="/create" class="btn btn-primary me-3 btn-lg start-writing">Start Writing</a>
                    <a href="/blogs" class="btn btn-primary btn-lg">Read blogs</a>
                </div>
                <div class="col-lg-6">
                    <img src="/img/carousel-1.jpg" alt="Blog illustration" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Posts Section -->
    <section style="background-color: #FEF9F2;" class="py-5">
        <div  class="container">
            <h2 class="text-center mb-5">Featured Posts</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card feature-card h-100">
                        <img src="/img/carousel-2.jpg" class="card-img-top" alt="Post image">
                        <div class="card-body">
                            <span class="category-badge mb-2 d-inline-block">Technology</span>
                            <h5 class="card-title">The Future of AI in 2024</h5>
                            <p class="card-text">Exploring the latest trends and innovations in artificial intelligence...</p>
                            <div class="d-flex align-items-center">
                                <img src="/img/user.jpg" class="rounded-circle me-2" alt="Author">
                                <div>
                                    <small class="text-muted">John Doe</small>
                                    <br>
                                    <small class="text-muted">5 min read</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card h-100">
                        <img src="/img/blog-3.jpg" class="card-img-top" alt="Post image">
                        <div class="card-body">
                            <span class="category-badge mb-2 d-inline-block">Travel</span>
                            <h5 class="card-title">Hidden Gems of Southeast Asia</h5>
                            <p class="card-text">Discover unexplored destinations and cultural experiences...</p>
                            <div class="d-flex align-items-center">
                                <img src="/img/user.jpg" class="rounded-circle me-2" alt="Author">
                                <div>
                                    <small class="text-muted">Jane Smith</small>
                                    <br>
                                    <small class="text-muted">8 min read</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card h-100">
                        <img src="/img/carousel-3.jpg" class="card-img-top" alt="Post image">
                        <div class="card-body">
                            <span class="category-badge mb-2 d-inline-block">Lifestyle</span>
                            <h5 class="card-title">Mindful Living in Modern Times</h5>
                            <p class="card-text">Tips and practices for maintaining balance in a busy world...</p>
                            <div class="d-flex align-items-center">
                                <img src="/img/user.jpg" class="rounded-circle me-2" alt="Author">
                                <div>
                                    <small class="text-muted">Mike Johnson</small>
                                    <br>
                                    <small class="text-muted">6 min read</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="stat-item">
                        <h3 class="display-4 fw-bold">10K+</h3>
                        <p class="mb-0">Active Writers</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-item">
                        <h3 class="display-4 fw-bold">50K+</h3>
                        <p class="mb-0">Published Stories</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-item">
                        <h3 class="display-4 fw-bold">1M+</h3>
                        <p class="mb-0">Monthly Readers</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">Popular Categories</h2>
            <div class="row g-4">
                <div class="col-md-3 col-6">
                    <div class="card text-center feature-card">
                        <div class="card-body">
                            <i class="fas fa-laptop-code fa-2x mb-3"></i>
                            <h5>Technology</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card text-center feature-card">
                        <div class="card-body">
                            <i class="fas fa-plane fa-2x mb-3"></i>
                            <h5>Travel</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card text-center feature-card">
                        <div class="card-body">
                            <i class="fas fa-heart fa-2x mb-3"></i>
                            <h5>Lifestyle</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card text-center feature-card">
                        <div class="card-body">
                            <i class="fas fa-utensils fa-2x mb-3"></i>
                            <h5>Food</h5>
                        </div>
                    </div>
                </div>
                 <div class="col-md-3 col-6">
                    <div class="card text-center feature-card">
                        <div class="card-body">
                            <i class="fas fa-church fa-2x mb-3"></i>
                            <h5>Religion</h5>
                        </div>
                    </div>
                </div>
                 <div class="col-md-3 col-6">
                    <div class="card text-center feature-card">
                        <div class="card-body">
                            <i class="fas fa-brain fa-2x mb-3"></i>
                            <h5>Philosophy</h5>
                        </div>
                    </div>
                </div>
                 <div class="col-md-3 col-6">
                    <div class="card text-center feature-card">
                        <div class="card-body">
                            <i class="fas fa-handshake fa-2x mb-3"></i>
                            <h5>Relationship</h5>
                        </div>
                    </div>
                </div>
                 <div class="col-md-3 col-6">
                    <div class="card text-center feature-card">
                        <div class="card-body">
                            <i class="fas fa-futbol fa-2x mb-3"></i>
                            <h5>Football</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container text-center">
            <h2 class="mb-4">Ready to Start Your Writing Journey?</h2>
            <p class="lead mb-4">Join our community of writers and readers today.</p>
            <button class="btn btn-primary btn-lg me-3 start-writing">Start Writing</button>
            <button class="btn btn-outline-primary btn-lg">Learn More</button>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>About Bloggify</h5>
                    <p>A platform for writers to share their stories and connect with readers worldwide.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-light">Home</a></li>
                        <li><a href="#" class="text-light">About</a></li>
                        <li><a href="#" class="text-light">Contact</a></li>
                        <li><a href="#" class="text-light">Terms</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Follow Us</h5>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-light"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="text-center">
                <small>&copy; 2024 Bloggify. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascript/index.js"></script>
</body>
</html>