<!-- views/new_blog -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= blog.title %> | My Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/new_blog.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container">
        <div class="blog-header text-center">
            <h1 class="display-4"><%= blog.title %></h1>
            <% if (blog.subtitle) { %>
                <p class="lead text-muted"><%= blog.subtitle %></p>
            <% } %>
            <div class="blog-meta">
                <span>Published on: <%= new Date(blog.createdAt).toLocaleDateString('en-GB', { 
                    year: 'numeric',
                    month: 'long', 
                    day: 'numeric'
                }) %></span>
                <div>Author: <%= username.toUpperCase() %></div>
            </div>
        </div>
        <img src="<%= blog.image || '/img/carousel-1.jpg' %>" class=" d-block w-100 img-fluid" alt="Blog image">
        <article class="blog-content mt-5">
            <%- blog.content %>
        </article>
    </div>

    <!-- Optional: Related or Featured Blogs Section -->
    <div class="container mt-5">
        <h2 class="text-center mb-4">Featured Blogs</h2>
        <div class="row">
            <% for (let i = 0; i < 3; i++) { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/img/user.jpg" class="card-img-top" alt="Blog Thumbnail">
                        <div class="card-body">
                            <h5 class="card-title">Related Blog Title <%= i + 1 %></h5>
                            <p class="card-text">A brief preview of another interesting blog post.</p>
                            <a href="#" class="btn btn-outline-primary">Read More</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>